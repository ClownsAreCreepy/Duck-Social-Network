<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane style="-fx-background-color: #2c3e50" xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="scs.ui.controllers.logins.LoginController">

    <VBox alignment="CENTER" maxHeight="400" maxWidth="350" spacing="15"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;">

        <effect>
            <DropShadow color="#00000040" spread="0.2"/>
        </effect>

        <Label text="Welcome Back" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>

        <Label style="-fx-font-size: 12px;" text="Please log into your account" textFill="#7f8c8d"/>

        <VBox alignment="CENTER_LEFT" spacing="5">
            <Label style="-fx-font-weight: bold;" text="Email"/>
            <TextField fx:id="emailField" promptText="example@gmail.com" style="-fx-padding: 10; -fx-font-size: 14px;"/>
        </VBox>

        <VBox alignment="CENTER_LEFT" spacing="5">
            <Label style="-fx-font-weight: bold;" text="Password"/>

            <StackPane alignment="CENTER_RIGHT">
                <TextField fx:id="passTextField" managed="false" style="-fx-padding: 10; -fx-font-size: 14px;"
                           visible="false"/>
                <PasswordField fx:id="passHiddenField" style="-fx-padding: 10; -fx-font-size: 14px;"/>

                <ToggleButton fx:id="togglePassBtn" focusTraversable="false" onAction="#onTogglePassword"
                              style="-fx-background-color: transparent; -fx-cursor: hand; -fx-text-fill: #7f8c8d"
                              text="ðŸ‘"/>
            </StackPane>
        </VBox>

        <Label fx:id="errorLabel" textFill="#e74c3c" visible="false" wrapText="true"/>

        <Button maxWidth="Infinity" onAction="#onLogin"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10; -fx-cursor: hand;"
                text="LOGIN"/>

        <Hyperlink onAction="#onGoToSignUp" style="-fx-text-fill: #3498db; -fx-cursor: hand;"
                   text="New here? Create an Account!"/>

    </VBox>

</StackPane>
