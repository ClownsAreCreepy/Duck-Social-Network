<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="scs.ui.controllers.race.EventController"
            style="-fx-background-color: #f4f6f7;">

    <top>
        <VBox spacing="10"
              style="-fx-padding: 20; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 10, 0, 0, 0);">
            <Label text="Events" textFill="#2c3e50">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>
            <Label text="   OR  "/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="newEventName" promptText="Name your new event..." HBox.hgrow="ALWAYS"
                           style="-fx-font-size: 14px; -fx-padding: 8;"/>
                <Button text="Create Event" onAction="#onCreateEvent"
                        style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 8 20; -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-padding: 20">
            <FlowPane fx:id="eventsGrid" hgap="20" vgap="20" alignment="TOP_LEFT"
                      style="-fx-background-color: transparent;"/>
        </ScrollPane>
    </center>

</BorderPane>